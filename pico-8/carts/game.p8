-- main

function _init()
	game_over=false
	make_player()
	make_ground()
end

function _update()
	move_player()
end

function _draw()
	cls()
	draw_ground()
	draw_player()
end

function rndb(low,high)
	return flr(rnd(high-low+1)+low)
end
